// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Marble {
  id                Int                @id @default(autoincrement())
  marbleType        String             @unique
  // Shade activation flags
  shadeAA           Boolean            @default(false)
  shadeA            Boolean            @default(false)
  shadeB            Boolean            @default(false)
  shadeBMinus       Boolean            @default(false)
  // Cost prices for each shade
  costPriceAA       Float?
  costPriceA        Float?
  costPriceB        Float?
  costPriceBMinus   Float?
  // Sale prices for each shade
  salePriceAA       Float?
  salePriceA        Float?
  salePriceB        Float?
  salePriceBMinus   Float?
  // Barcodes for each shade
  barcodeAA         String?            @unique
  barcodeA          String?            @unique
  barcodeB          String?            @unique
  barcodeBMinus     String?            @unique
  // Status and notes
  status            String             @default("Out of Stock")
  notes             String?
  // Timestamps
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  // Relations
  stockEntries      StockEntry[]
  stockTransactions StockTransaction[]
  reservedStocks    ReservedStock[]
}

// New model for individual stock entries (when stock is added)
model StockEntry {
  id                Int                @id @default(autoincrement())
  marbleId          Int
  marble            Marble             @relation(fields: [marbleId], references: [id], onDelete: Cascade)
  shade             String             // AA, A, B, B-
  quantity          Float              @default(0)
  slabSizeLength    Float?
  slabSizeWidth     Float?
  numberOfSlabs     Int?
  notes             String?            // Stores slab info: "Slab Size: LENGTHxWIDTH, Number of Slabs: COUNT"
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
}

model StockTransaction {
  id          Int      @id @default(autoincrement())
  marbleId    Int
  marble      Marble   @relation(fields: [marbleId], references: [id], onDelete: Cascade)
  type        String   // 'IN' or 'OUT'
  quantity    Float
  reason      String?
  requestedBy String?
  notes       String?
  createdAt   DateTime @default(now())
}

model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  password    String
  fullName    String
  email       String   @unique
  phone       String?
  role        String   @default("Staff") // 'Admin' or 'Staff'
  status      String   @default("Active") // 'Active' or 'Disabled'
  department  String?
  joinedDate  DateTime @default(now())
  lastActive  DateTime @updatedAt
  createdAt   DateTime @default(now())
}

model Notification {
  id        Int      @id @default(autoincrement())
  type      String   // 'low-stock', 'stock-added', 'stock-removed', 'info'
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model ReservedStock {
  id                Int      @id @default(autoincrement())
  marbleId          Int
  marble            Marble   @relation(fields: [marbleId], references: [id], onDelete: Cascade)
  shade             String   // AA, A, B, B-
  clientName        String
  clientPhone       String?
  clientEmail       String?
  quantity          Float
  slabSizeLength    Float
  slabSizeWidth     Float
  numberOfSlabs     Int
  reservedBy        String?  // Username who reserved
  notes             String?
  status            String   @default("Reserved") // 'Reserved', 'Released', 'Cancelled'
  reservedAt        DateTime @default(now())
  releasedAt        DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
