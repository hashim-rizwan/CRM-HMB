// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Marble {
  id                Int                @id @default(autoincrement())
  marbleType        String
  color             String              // Stores shade (AA, A, B, B-)
  quantity          Float               @default(0)
  unit              String              @default("square feet")
  supplier          String?             // Optional supplier info (for backward compatibility)
  batchNumber       String?             // Optional batch number (for backward compatibility, new entries use shade instead)
  barcode           String?             @unique
  costPrice         Float?
  salePrice         Float?
  status            String              @default("In Stock")
  notes             String?             // Stores slab info: "Slab Size: LENGTHxWIDTH, Number of Slabs: COUNT"
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  stockTransactions StockTransaction[]
  reservedStocks    ReservedStock[]
}

model StockTransaction {
  id          Int      @id @default(autoincrement())
  marbleId    Int
  marble      Marble   @relation(fields: [marbleId], references: [id], onDelete: Cascade)
  type        String   // 'IN' or 'OUT'
  quantity    Float
  reason      String?
  requestedBy String?
  notes       String?
  createdAt   DateTime @default(now())
}

model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  password    String
  fullName    String
  email       String   @unique
  phone       String?
  role        String   @default("Staff") // 'Admin' or 'Staff'
  status      String   @default("Active") // 'Active' or 'Disabled'
  department  String?
  joinedDate  DateTime @default(now())
  lastActive  DateTime @updatedAt
  createdAt   DateTime @default(now())
}

model Notification {
  id        Int      @id @default(autoincrement())
  type      String   // 'low-stock', 'stock-added', 'stock-removed', 'info'
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model ReservedStock {
  id                Int      @id @default(autoincrement())
  marbleId          Int
  marble            Marble   @relation(fields: [marbleId], references: [id], onDelete: Cascade)
  clientName        String
  clientPhone       String?
  clientEmail       String?
  quantity          Float
  slabSizeLength    Float
  slabSizeWidth     Float
  numberOfSlabs     Int
  reservedBy        String?  // Username who reserved
  notes             String?
  status            String   @default("Reserved") // 'Reserved', 'Released', 'Cancelled'
  reservedAt        DateTime @default(now())
  releasedAt        DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
